    {
        company: "Keeley Companies",
        position: "Data Analyst",
        duration: "Apr 2025 - Present · 2 mos",
        location: "St Louis, Missouri, United States · On-site",
        type: "Contract",
        responsibilities: [
            "Understanding, analyzing, interpret complex data replicated from SAGE CRE 300 for data migration project",
            "Extracting preformatted data from CMiC and validating data to the old ERP system",
            "Comparing old and new data meticulously, providing detailed feedback on any discrepancies to the ETL team",
            "Handling large data sets utilizing tools and comparison logic in SQL, VSCode, and Excel to ensure data accuracy",
            "Using advance Excel skills VLOOKUP, XLOOKUP, IFERRORS, IFSUM, TRIM, and INDEXMATCH for some of the functions with the data"
        ],
        skills: ["SQL", "VLOOKUP", "INDEXMATCH", "Data Analysis", "Data Validation"]
    },
    {
        company: "Curtiss-Wright Corporation",
        position: "Staff Accountant",
        duration: "Nov 2022 - Aug 2023 · 10 mos",
        location: "Charlotte, North Carolina, United States · Hybrid",
        type: "Full-time",
        responsibilities: [
            "Managed general ledgers and performed analytical problem solving",
            "Handled fixed assets accounting and documentation",
            "Conducted research and implemented problem-solving strategies",
            "Maintained accurate financial records and reports"
        ],
        skills: ["General Ledgers", "Analytic Problem Solving", "Fixed Assets", "Research Skills", "Problem Solving"]
    },
    {
        company: "Robert Half",
        position: "Professional Consultant",
        duration: "Oct 2021 - Jul 2022 · 10 mos",
        location: "Charlotte, North Carolina, United States",
        type: "Full-time",
        responsibilities: [
            "Performed cash reconciliation and month-end closing procedures",
            "Managed journal entries and bank reconciliation processes",
            "Handled 401K and bonus compensation calculations",
            "Conducted audits and managed commission calculations"
        ],
        skills: ["General Ledger Reconciliations", "General Ledgers", "Analytic Problem Solving", "Fixed Assets", "Account Reconciliation", "Research Skills", "Bank Reconciliation", "Problem Solving"]
    },
    {
        company: "NTT",
        position: "Reconciliation Analyst",
        duration: "May 2019 - Sep 2021 · 2 yrs 5 mos",
        location: "Charlotte, North Carolina Area",
        type: "Full-time",
        responsibilities: [
            "Processed and reconciled statements for multiple vendors, handling millions of dollars in daily invoices",
            "Managed complex projects including credits, debit memos, and partials",
            "Researched and documented credit discrepancies using SAP, Oracle, and cloud-based systems",
            "Coordinated with procurement, receiving, credit, ICM, buyers, and sales teams",
            "Served as backup for payment processing, handling vendor payments for 11 vendors weekly"
        ],
        skills: ["Accounts Receivable (AR)", "Journal Entries (Accounting)", "Analytic Problem Solving", "Account Reconciliation", "Research Skills", "Accounts Payable", "Problem Solving"]
    },
    {
        company: "Wells Fargo",
        position: "Trading Service Representatives",
        duration: "Jan 2019 - Mar 2019 · 3 mos",
        location: "Charlotte, North Carolina",
        type: "Contract",
        responsibilities: [
            "Participated in sponsorship program for SIE, Series 7, and Series 63 licensing",
            "Studied AML, Fraud, and financial regulations",
