        ],
        skills: ["Problem Solving"]
    }
];
---

<div class="work-experience">
    {experiences.map((exp) => (
        <div class="experience-item">
            <div class="company-header">
                <h3>{exp.position}</h3>
                <span class="company">{exp.company} · {exp.type}</span>
                <span class="duration">{exp.duration}</span>
                <span class="location">{exp.location}</span>
            </div>
            
            <ul class="responsibilities">
                {exp.responsibilities.map(item => (
                    <li>{item}</li>
                ))}
            </ul>
            
            {exp.skills && exp.skills.length > 0 && (
                <div class="skills">
                    <span class="skills-label">Skills:</span>
                    <div class="skill-tags">
                        {exp.skills.map(skill => (
                            <span class="skill-tag">{skill}</span>
                        ))}
                    </div>
                </div>
            )}
        </div>
    ))}
</div>

<style>
    .work-experience {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    .experience-item {
        border-left: 2px solid var(--accent-color);
        padding-left: 1.5rem;
        position: relative;
    }

    .experience-item::before {
        content: '';
        position: absolute;
        left: -5px;
        top: 0;
        width: 8px;
        height: 8px;
        background-color: var(--accent-color);
        border-radius: 50%;
    }

    .company-header {
        margin-bottom: 1rem;
    }

    .company-header h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .company {
        display: block;
        color: var(--accent-color);
        margin-bottom: 0.25rem;
    }

    .duration, .location {
        display: block;
        font-size: 0.9rem;
        color: var(--accent-color);
        margin-bottom: 0.25rem;
    }

    .responsibilities {
        margin: 1rem 0;
        padding-left: 1.5rem;
    }

    .responsibilities li {
        margin-bottom: 0.5rem;
        line-height: 1.6;
    }

    .skills {
        margin-top: 1rem;
    }

    .skills-label {
        display: block;
        margin-bottom: 0.5rem;
        color: var(--accent-color);
    }

    .skill-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .skill-tag {
        background: rgba(255, 255, 255, 0.1);
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.875rem;
    }
</style>