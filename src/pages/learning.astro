---

<Layout title="Learning & Development">
    <section class="learning-header">
        <h1>Learning & Development</h1>
        <p>Continuous education and professional development journey.</p>
    </section>

    <section class="courses">
        <h2>Education</h2>
        {courses.map(course => (
            <div class="course-card">
                <div class="course-header">
                    <h3>{course.title}</h3>
                    <span class={`status ${course.status.toLowerCase()}`}>{course.status}</span>
                </div>
                <div class="provider-info">
                    <span class="provider">{course.provider}</span>
                    <span class="completion">{course.completion}</span>
                </div>
                <p class="description">{course.description}</p>
                <div class="skills">
                    {course.skills.map(skill => (
                        <span class="skill-tag">{skill}</span>
                    ))}
                </div>
            </div>
        ))}
    </section>

    <section class="revisiting-tripleten">
        <h2>Revisiting TripleTen</h2>
        <p class="section-description">Continuous improvement and refinement of key projects from the TripleTen bootcamp.</p>
        
        <div class="sprint-section">
            {revisitingTripleTen.filter(item => item.sprint).map(sprint => (
                <div class="sprint-card">
                    <h3>{sprint.sprint}</h3>
                    <div class="topics">
                        {sprint.topics.map(topic => (
                            <div class="topic">
                                <h4>{topic.title}</h4>
                                <ul>
                                    {topic.concepts.map(concept => (
                                        <li>{concept}</li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                    <div class="sprint-projects">
                        {sprint.projects.map(project => (
                            <div class="project">
                                <h4>{project.name}</h4>
                                <div class="skills">
                                    {project.skills.map(skill => (
                                        <span class="skill-tag">{skill}</span>
                                    ))}
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>
        
        <div class="projects-grid">
            {revisitingTripleTen.filter(item => item.project).map(item => (
                <div class="project-card">
                    <h3>{item.project}</h3>
                    <div class="skills-section">
                        <h4>Key Skills</h4>
                        <div class="skills">
                            {item.skills.map(skill => (
                                <span class="skill-tag">{skill}</span>
                            ))}
                        </div>
                    </div>
                    <div class="improvements-section">
                        <h4>Improvements</h4>
                        <ul>
                            {item.improvements.map(improvement => (
                                <li>{improvement}</li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <section class="tutorials">
        <h2>Tutorials & Guides</h2>
        {tutorials.map(post => <BlogPost {...post} />)}
    </section>
</Layout>

<style>
    .learning-header {
        margin: 4rem 0;
    }

    .learning-header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .learning-header p {
        color: var(--accent-color);
        font-size: 1.2rem;
        max-width: 600px;
    }

    h2 {
        font-size: 2rem;
        margin: 3rem 0 2rem;
    }

    .courses {
        display: grid;
        gap: 2rem;
        margin: 2rem 0;
    }

    .course-card {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .course-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .course-header h3 {
        font-size: 1.5rem;
        margin: 0;
    }

    .status {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .status.completed {
        background: rgba(0, 255, 0, 0.1);
        color: #4CAF50;
    }

    .status.in.progress {
        background: rgba(255, 166, 0, 0.1);
        color: #FFA726;
    }

    .status.planned {
        background: rgba(33, 150, 243, 0.1);
        color: #2196F3;
    }

    .provider-info {
        display: flex;
        justify-content: space-between;
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .description {
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .skills {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .skill-tag {
        background: rgba(255, 255, 255, 0.1);
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.875rem;
    }

    .tutorials {
        margin: 4rem 0;
    }

    .revisiting-tripleten {
        margin: 4rem 0;
    }

    .section-description {
        color: var(--accent-color);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .sprint-section {
        margin-bottom: 3rem;
    }

    .sprint-card {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 2rem;
    }

    .sprint-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: #4CAF50;
    }

    .topics {
        display: grid;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .topic h4 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        color: var(--accent-color);
    }

    .topic ul {
        list-style: none;
        padding: 0;
    }

    .topic li {
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .topic li::before {
        content: "•";
        position: absolute;
        left: 0;
        color: var(--accent-color);
    }

    .sprint-projects {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .project-card {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .project-card h3 {
        font-size: 1.3rem;
        margin-bottom: 1.5rem;
    }

    .project-card h4 {
        font-size: 1.1rem;
        margin-bottom: 1rem;
        color: var(--accent-color);
    }

    .skills-section, .improvements-section {
        margin-bottom: 1.5rem;
    }

    .improvements-section ul {
        list-style: none;
        padding: 0;
    }

    .improvements-section li {
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .improvements-section li::before {
        content: "→";
        position: absolute;
        left: 0;
        color: var(--accent-color);
    }
</style>