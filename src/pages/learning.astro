        provider: "Triple Ten",
        status: "Completed",
        completion: "2024",
        description: "Comprehensive data science program covering Python, machine learning, and statistical analysis.",
        skills: ["Python", "Machine Learning", "Data Analysis", "Statistics", "Neural Networks"]
    }
