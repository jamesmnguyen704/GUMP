<style is:global>
	:root {
		--text-color: #ffffff;
		--bg-color: #000000;
		--accent-color: #666666;
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--bg-color);
		color: var(--text-color);
	}
	body {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}
	header {
		padding: 2rem 0;
	}
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.nav-links {
		display: flex;
		gap: 2rem;
		align-items: center;
	}
	.nav-links a {
		color: var(--text-color);
		text-decoration: none;
		font-size: 1rem;
	}
	.contact-container {
		position: relative;
	}
	.contact-btn {
		border: 1px solid var(--text-color);
		padding: 0.5rem 1rem;
		border-radius: 4px;
	}
	.contact-info {
		position: absolute;
		top: 100%;
		right: 0;
		background-color: var(--bg-color);
		border: 1px solid var(--text-color);
		padding: 1rem;
		border-radius: 4px;
		margin-top: 0.5rem;
		display: none;
		white-space: nowrap;
		z-index: 10;
	}
	.contact-info p {
		margin: 0.5rem 0;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.contact-container:hover .contact-info {
		display: block;
	}
	.outlook-icon, .discord-icon {
		width: 20px;
		height: 20px;
	}
	.outlook-icon {
		color: #0078D4;
	}
	.discord-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--text-color) !important;
	}
	main {
		padding: 2rem 0;
	}
</style>